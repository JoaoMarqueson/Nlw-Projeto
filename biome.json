{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports":{
		"enabled": true
	},
	"formatter":{
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 80

	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y":{
				"noSvgWithoutTitle":"off"
			},
			"suspicious":{
				"noArrayIndexKey": "info"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas":"es5",
			"semicolons":"asNeeded",
			"jsxQuoteStyle":"double",
			"arrowParentheses":"asNeeded"
		}
	},
	"files":{
		"ignore": [
			"node_modules"
		]
	}
}

